<% provide(:title, @user.name) %>
<div class="container">
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
      </section>
    </aside>
    <div class="col-md-8">
      <% if @user.records.any? %>
        <h3>Records (<%= @user.records.count %>)</h3>
        <ol class="records">
          <%= render @records%>
        </ol>
        <%= will_paginate @records%>
      <% end %>
    </div>
  </div>
</div>
